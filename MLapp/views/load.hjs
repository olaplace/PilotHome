    <h1>{{ title }}</h1> 
    <h2>LOAD the documents in the DB</h2>
		
    <form action="/load" method="post" class="form-horizontal">
        <div class="control-group">
            <label for="docs_to_load" class="control-label">Load documents of type (JSON):</label>
            <div class="controls">
                <input id="docs_to_load" type="text" name="docs_to_load" placeholder="JSON">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Load documents</button>&nbsp; 

        </div>
    </form>
	<!--
	<p>{{msg_load}}</p>
